<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/spacing">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/Logo"
            android:src="@mipmap/clientlogo"
            android:layout_marginBottom="@dimen/spacing"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendnotify"
        android:textSize="@dimen/heading"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type a message"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/heading"/>
    <Button
        android:layout_width="@dimen/signoutbtn"
        android:layout_height="@dimen/signoutbtn"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/backarrow"
        android:onClick="backMainActivity" />
</LinearLayout>