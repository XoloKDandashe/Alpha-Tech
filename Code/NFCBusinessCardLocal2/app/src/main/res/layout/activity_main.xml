<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.www.nfcbusinesscardlocal.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Logo"
            android:src="@mipmap/clientlogo"
            android:layout_marginBottom="@dimen/spacing"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/maketop"
        android:orientation="horizontal">
        <Button
            android:id = "@+id/openSendCard"
            android:layout_width="@dimen/buttons"
            android:layout_height="@dimen/buttons"
            android:background="@color/epiuseblue"
            android:textColor="@color/white"
            android:text="@string/sendcard"
            android:textSize="@dimen/fontsize"
            android:onClick="openSendCard"
            android:drawableRight="@mipmap/send"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            />
        <Button
            android:id ="@+id/openReceiveCard"
            android:layout_width="@dimen/buttons"
            android:layout_height="@dimen/buttons"
            android:background="@color/epiuseblue"
            android:text="@string/receivecard"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:onClick="openReceiveCard"
            android:layout_marginRight="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            android:drawableRight="@mipmap/recieve"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/buttons"
            android:layout_height="@dimen/buttons"
            android:onClick="openViewDetails"
            android:background="@color/epiuseblue"
            android:text="@string/updateinfo"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            android:textColor="@color/white"
            android:drawableRight="@mipmap/edittwo"/>
        <Button
            android:id = "@+id/openManageCards"
            android:layout_width="@dimen/buttons"
            android:layout_height="@dimen/buttons"
            android:background="@color/epiuseblue"
            android:text="@string/managecards"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:drawableRight="@mipmap/managecard"
            android:layout_marginRight="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            android:onClick="openManageCards"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="@dimen/signoutbtn"
            android:layout_height="@dimen/signoutbtn"
            android:layout_marginLeft="15dp"
            android:onClick="backMainActivity"
            android:background="@mipmap/signout" />
    </LinearLayout>
</LinearLayout>
