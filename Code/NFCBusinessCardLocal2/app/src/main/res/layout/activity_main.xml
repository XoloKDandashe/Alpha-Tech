<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.www.nfcbusinesscardlocal.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/city_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        android:background="@color/lightblue"
        android:padding="@dimen/maxpadding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/header"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="3"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:text="@string/sendcard"
                android:textSize="@dimen/textsize"
                android:onClick="openSendCard"
                android:drawableTop="@drawable/ic_send"
                android:padding="@dimen/minpadding"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:padding="@dimen/minpadding"
                android:text="@string/receivecard"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                android:onClick="openReceiveCard"
                android:drawableTop="@drawable/ic_receive"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:text="@string/managecards"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                android:padding="@dimen/minpadding"
                android:drawableTop="@drawable/ic_manage_card"
                android:onClick="openManageCards"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/profile_border">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openViewDetails"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:text="@string/edit_nfc"
                android:textSize="@dimen/textsize"
                android:padding="@dimen/minpadding"
                android:textStyle="bold"
                android:drawableTop="@drawable/ic_nfc_card"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">
                <Button
                    android:id="@+id/btn_signout"
                    android:layout_width="@dimen/signoutbtn"
                    android:layout_height="@dimen/signoutbtn"
                    android:background="@drawable/ic_sign_out"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
