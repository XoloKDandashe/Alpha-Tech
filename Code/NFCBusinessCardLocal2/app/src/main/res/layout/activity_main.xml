<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.www.nfcbusinesscardlocal.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:padding="@dimen/maxpadding"
    android:background="@mipmap/background"
    >
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:text="@string/sendcard"
            android:textSize="@dimen/heading"
            android:onClick="openSendCard"
            android:drawableRight="@mipmap/send"
            android:padding="@dimen/padding"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:padding="@dimen/padding"
            android:text="@string/receivecard"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:onClick="openReceiveCard"
            android:layout_marginBottom="@dimen/spacing"
            android:drawableRight="@mipmap/recieve"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:onClick="openViewDetails"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:text="@string/updateinfo"
            android:textSize="@dimen/heading"
            android:padding="@dimen/padding"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing"
            android:drawableRight="@drawable/ic_person"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:text="@string/managecards"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:padding="@dimen/padding"
            android:drawableRight="@mipmap/managecard"
            android:layout_marginBottom="@dimen/spacing"
            android:onClick="openManageCards"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right">
            <Button
                android:id="@+id/btn_signout"
                android:layout_width="@dimen/signoutbtn"
                android:layout_height="@dimen/signoutbtn"
                android:background="@drawable/ic_sign_out">
            </Button>
        </LinearLayout>
</LinearLayout>
