<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.www.nfcbusinesscardlocal.ManageCards"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgrounda"
    android:padding="@dimen/padding"
    >

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/banner"
        android:textSize="@dimen/heading"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>
    <!--Manage Cards Start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/viewcards"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slabButtons"
            android:textSize="@dimen/heading"
            android:background="@color/lightblue"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/spacing"
            android:drawableRight="@mipmap/viewcards"
            android:onClick="openViewCardsInterface"
            android:text="@string/recievedcards"/>
        <Button
            android:id="@+id/readinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slabButtons"
            android:textSize="@dimen/heading"
            android:background="@color/lightblue"
            android:textColor="@color/white"
            android:drawableRight="@mipmap/files"
            android:layout_marginBottom="@dimen/spacing"
            android:onClick="openCardReadInformation"
            android:text="@string/readcard"/>
        <Button
            android:id="@+id/delinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slabButtons"
            android:textSize="@dimen/heading"
            android:background="@color/lightblue"
            android:textColor="@color/white"
            android:drawableRight="@mipmap/trashcan"
            android:layout_marginBottom="@dimen/spacing"
            android:onClick="openCardDeleteInformation"
            android:text="@string/deletecard"/>
        <Button
            android:id="@+id/writeinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slabButtons"
            android:textSize="@dimen/heading"
            android:background="@color/lightblue"
            android:textColor="@color/white"
            android:drawableRight="@mipmap/edittwo"
            android:onClick="openCardWriteInformation"
            android:text="@string/updatecard"/>
    </LinearLayout>
    <!--Manage Card End-->

</LinearLayout>
