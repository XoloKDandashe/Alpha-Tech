<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/city_background"
    tools:context="com.example.www.nfcbusinesscardlocal.CardReadInformation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:background="@color/lightblue"
        android:weightSum="5">

        <Button
            android:id="@+id/btn_read"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/fontsize"
            android:padding="@dimen/padding"
            android:drawableRight="@drawable/ic_nfc_card"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/message_read_tag"
            android:background="@drawable/textview_border"/>
        <LinearLayout
            android:id="@+id/read_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/read_fullname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_person"/>
            <TextView
                android:id="@+id/read_jobTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_work_sort"/>
            <TextView
                android:id="@+id/read_emailAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_email"/>
            <TextView
                android:id="@+id/read_webAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_website"/>
            <TextView
                android:id="@+id/read_personalnumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_phone"/>
            <TextView
                android:id="@+id/read_officenumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_telephone"/>
            <TextView
                android:id="@+id/read_company"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_building"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/read_physAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_edit_location"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
