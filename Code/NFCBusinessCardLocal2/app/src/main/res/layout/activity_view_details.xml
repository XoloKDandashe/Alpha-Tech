<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.www.nfcbusinesscardlocal.ViewDetails"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="7"
    android:layout_height="match_parent"
    android:background="@mipmap/backgrounda"
    android:padding="@dimen/padding"
    >
    <!--profile picture and fullname with jobtitle start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="@dimen/profilepic"
                android:layout_height="@dimen/profilepic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="220dp"
                    android:layout_height="40dp">
                <TextView
                    android:id="@+id/fullname"
                    android:textColor="@color/white"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/heading"
                    android:textStyle="bold"
                    android:text="@string/defaultname"/>
                </ScrollView>
                <TextView
                    android:id="@+id/jobtitle"
                    android:textColor="@color/white"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold"
                    android:text="@string/defaultjob"/>
                <Button
                    android:layout_width="@dimen/editbox"
                    android:layout_height="@dimen/editbox"
                    android:onClick="openUpdateDetails"
                    android:background="@drawable/ic_update"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/lesspadding">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--profile picture and fullname with jobtitle start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:text="Company: "
            />
        <ScrollView
            android:layout_width="200dp"
            android:layout_height="35dp">
        <TextView
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/company"
            />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal no: "
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/personalnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/personal"
            android:textSize="@dimen/heading"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:text="Office no: "
            />
        <TextView
            android:id="@+id/officenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:text="@string/office"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Email: "
            />
        <ScrollView
            android:layout_width="250dp"
            android:layout_height="40dp">
        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:text="@string/email"
            />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            android:textStyle="bold"
            android:text="Office Address: "
            />
        <ScrollView
            android:layout_width="150dp"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/physAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:autoLink="map"
            android:text="@string/address"
            />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
