<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.www.nfcbusinesscardlocal.ViewDetails"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/city_background"
    >
    <!--profile picture and fullname with jobtitle start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        android:background="@color/lightblue"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:weightSum="7"
            android:background="@drawable/profile_border"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="3"
                android:paddingRight="@dimen/minpadding">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_person"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:weightSum="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/view_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/view_surname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/jobtitle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_work_sort"
                        android:textStyle="bold"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="6"
                android:layout_weight="5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical|center_horizontal"
                    android:autoLink="email"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_email"/>
                <TextView
                    android:id="@+id/webAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical|center_horizontal"
                    android:autoLink="web"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_website"/>
                <TextView
                    android:id="@+id/personalnumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical|center_horizontal"
                    android:autoLink="phone"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_phone"/>
                <TextView
                    android:id="@+id/officenumber"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical|center_horizontal"
                    android:autoLink="phone"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_telephone"/>
                <TextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_building"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/physAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:drawableEnd="@drawable/ic_edit_location"/>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_clear_card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="Clear NFC Card"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_remove"/>
                <Button
                    android:id="@+id/btn_write_card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="Write to NFC Card"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_manage_card"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|bottom">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/signoutbtn"
                    android:background="@color/transparent"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_edit_details"
                    android:onClick="openUpdateDetails"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
