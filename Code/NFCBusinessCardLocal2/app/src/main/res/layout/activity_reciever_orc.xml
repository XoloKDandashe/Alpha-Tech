<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/city_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/reciever_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textIsSelectable="true"
        android:text="TextView"
        android:background="@color/lightblue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        android:padding="@dimen/spacing"
        <!-- Name Label -->
        <EditText android:id="@+id/import_Name"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Full Name" />



    </LinearLayout>
    <EditText
        android:id="@+id/importCompanyName"
        android:layout_width="match_parent"
        android:background="@color/whitefaded"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CompanyName"
        android:inputType="textPersonName"
        android:drawableEnd="@drawable/ic_building"/>
    <EditText
        android:id="@+id/import_Adress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/whitefaded"
        android:textColorHint="@color/white"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:drawableEnd="@drawable/ic_edit_location"/>
    <EditText
        android:id="@+id/importMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/whitefaded"
        android:hint="Mobile number"
        android:inputType="phone"
        android:drawableEnd="@drawable/ic_phone"/>
    <EditText
        android:id="@+id/importWorkNumber"
        android:layout_width="match_parent"
        android:background="@color/whitefaded"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Work Telephone"
        android:inputType="phone"
        android:drawableEnd="@drawable/ic_telephone"/>



    <EditText
        android:id="@+id/importEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitefaded"
        android:ems="10"
        android:hint="Email"
        android:drawableEnd="@drawable/ic_email"
        android:inputType="textEmailAddress" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/lesspadding"
        android:gravity="center">

        <Button
            android:id="@+id/qrbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableEnd="@drawable/ic_phone"
            android:padding="@dimen/lesspadding"
            android:text="Save Card"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>