<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/background"

    android:weightSum="7"
    tools:context="com.example.www.nfcbusinesscardlocal.ReaderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qrscanbanner"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/heading"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize"
            android:padding="@dimen/lesspadding"
            android:textStyle="bold"
            android:background="@drawable/textview_border"
            android:drawableRight="@drawable/ic_qr_code"
            android:text="@string/qrscan"
            android:id="@+id/scan_btn"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scanned"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:padding="@dimen/lesspadding"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scannedDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/lesspadding"
        android:gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize"
            android:drawableEnd="@drawable/ic_phone"
            android:padding="@dimen/lesspadding"
            android:visibility="invisible"
            android:text="Save to phone"
            android:id="@+id/qrbtn"/>
    </LinearLayout>

</LinearLayout>
