<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/Logo"
        android:src="@mipmap/clientlogo"
        android:layout_marginBottom="@dimen/spacing"/>
    <TextView
        android:id="@+id/tv_in_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/receiverbanner"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/heading"/>

    <TextView
        android:id="@+id/tv_in_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/fontsize"
        android:textColor="@color/black"
        android:text="@string/tapreceive"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/buttons"
            android:layout_height="wrap_content"
            android:background="@color/epiuseblue"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:id="@+id/btn"
            android:text="Save to phone"/>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/signoutbtn"
        android:layout_height="@dimen/signoutbtn"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/backarrow"
        android:onClick="backMainActivity" />

</LinearLayout>
