<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/city_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightblue"
        android:padding="@dimen/lesspadding"
        android:weightSum="7">
        <TextView
            android:id="@+id/tv_in_label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/receiverbanner"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/heading"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <LinearLayout
                android:id="@+id/details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="8"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rec_nfc_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_person"/>
                    <TextView
                        android:id="@+id/rec_nfc_jobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_work_sort"/>
                    <TextView
                        android:id="@+id/rec_nfc_emailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_email"/>
                    <TextView
                        android:id="@+id/rec_nfc_webAddress"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_website"/>
                    <TextView
                        android:id="@+id/rec_nfc_personalnumber"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_phone"/>
                    <TextView
                        android:id="@+id/rec_nfc_officenumber"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_telephone"/>
                    <TextView
                        android:id="@+id/rec_nfc_company"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_building"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/rec_nfc_physAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textsize"
                                android:textStyle="bold"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/white"
                                android:drawableEnd="@drawable/ic_edit_location"/>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/lesspadding"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize"
                android:drawableEnd="@drawable/ic_phone"
                android:textStyle="bold"
                android:id="@+id/btn"
                android:visibility="invisible"
                android:text="Save to phone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
