<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"

    android:background="@mipmap/background"

    android:weightSum="7"
    android:layout_height="match_parent"
    tools:context="com.example.www.nfcbusinesscardlocal.ReceiverInterface">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/receivebanner"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/heading"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/padding"
        android:weightSum="2"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:text="@string/nfcreceive"
            android:textSize="@dimen/fontsize"
            android:layout_marginRight="@dimen/spacing"
            android:drawableLeft="@mipmap/sendingphone"
            android:drawableRight="@mipmap/sendingphoner"
            android:textStyle="bold"
            android:onClick="openNFCRecieve"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/textview_border"
            android:text="@string/qrreceive"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:onClick="openQRRecieve"
            android:drawableRight="@mipmap/qr"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:padding="@dimen/lesspadding"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_border"
            android:textColor="@color/white"
            android:text="Import physical Card"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            android:visibility="invisible"
            android:onClick="openRecieveImport"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
</LinearLayout>
